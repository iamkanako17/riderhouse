<%# CSS・・・assets/stylesheets/shared/header.css %>

<header>
  
  <nav class="navbar navbar-expand-sm-md navbar-light bg-light">
    <button class="navbar-toggler" data-toggle="collapse" data-target="#menu">
      <span class="navbar-toggler-icon" ></span>
    </button>
    <h1 class="nav-title center">
      <i class="fas fa-motorcycle"></i>Rider house book
    </h1>
    <div id="menu" class="collapse navbar-collapse">
      <ul class="nav-bar-nav">


        <li class="nav-item center mb-2">
          <%= link_to root_path do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>

        <% if host_user_signed_in? %>
          <li class="nav-item center"><%= link_to current_host_user.nickname, class:'user-nickname' %></li>
          <li class="nav-item center"><%= link_to 'ログアウト', destroy_host_user_session_path, method: :delete, class: 'logout'%></li>
          <li class="nav-item center"><%= link_to '宿を登録する', new_lodging_path, class:'new-lodge' %></li>
        <% else %>
          <li class="nav-item center"><%= link_to 'ホストになる', new_host_user_registration_path, class:'sign-up' %></li>
          <li class="nav-item center"><%= link_to 'ホストログイン', new_host_user_session_path, class:'login'%></li>
        <% end %>

        <%= form_with(url: search_lodgings_path, local: true, method: :get, class: "search-form mt-4 center") do |f| %>
          <%= f.text_field :keyword, placeholder: "都道府県・市区町村から探す", class: "input-box" %>
          <%= f.submit "search", class: "search-button"%>
        <% end %>
      </ul>
    </div>
  </nav>
</header>