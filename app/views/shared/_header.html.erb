<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='nav'>
    <ul class="nav-bar">

      
      <li class="contents">
        <%= link_to root_path do %>
          <i class="fas fa-home"></i>
        <% end %>
      </li>

      <% if host_user_signed_in? %>
        <li class="contents"><%= link_to current_host_user.nickname, class:'user-nickname' %></li>
        <li class="contents"><%= link_to 'ログアウト', destroy_host_user_session_path, method: :delete, class: 'logout'%></li>
        <li class="contents"><%= link_to '宿を登録する', new_lodging_path, class:'new-lodge' %></li>
      <% else %>
        <li class="contents"><%= link_to 'ホストになる', new_host_user_registration_path, class:'sign-up' %></li>
        <li class="contents"><%= link_to 'ホストログイン', new_host_user_session_path, class:'login'%></li>
      <% end %>
    </ul>

    <div>
      <form class="search-form" action="#">
          <input class='input-box' placeholder='キーワードから探す'>
          <button class="search-button">
            <i class="fas fa-search"></i>
          </button>
      </form>
    </div>
  </div>
</header>