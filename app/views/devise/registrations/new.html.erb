<%# CSS・・・assets/stylesheets/registrations/new.scss %>


<%= form_with model: @host_user, url: host_user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", model: f.object %>
  <div class="field-cover">
    <h2>ホストユーザー</h2>
    <div class="field">
      <%= f.label :nickname %><br />
      <%= f.text_field :nickname, class: "input-deafault", autofocus: true, placeholder: "ニックネーム" %>
    </div>

    <div class="field">
      <%= f.label :hostname %><br />
      <%= f.text_field :hostname, class: "input-deafault", autofocus: true, placeholder: "フルネーム" %>
    </div>

    <div class="field">
      <%= f.label :hostname_kana %><br />
      <%= f.text_field :hostname_kana, class: "input-deafault", autofocus: true, placeholder: "フリガナ" %>
    </div>

    <div class="field">
      <%= f.label :phone %><br />
      <%= f.text_field :phone, class: "input-deafault", autofocus: true, placeholder: "09012345678" %>
    </div>

    <div class="field">
      <%= f.label :age %><br />
      <%= f.text_field :age, class: "input-deafault", autofocus: true, placeholder: "22" %>
    </div>

    <div class="field">
      <%= f.label :gender %><br />
      <%= f.text_field :gender, class: "input-deafault", autofocus: true, placeholder: "男性" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, 
      class: "input-deafault", autofocus: true, placeholder: "aaa@gamil.com", autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, class: "input-deafault",autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: "input-deafault", autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "登録する", class: "input-default" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

